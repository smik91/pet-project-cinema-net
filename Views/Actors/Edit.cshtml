@model Actor

@{
    ViewData["Title"] = "Edit Actor";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Edit Actor</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div class="form-group">
                            <label class="control-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Profile Picture URL</label>
                            <input asp-for="ProfilePictureURL" class="form-control" />
                            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Bio</label>
                            <textarea asp-for="Bio" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-controller="Actors" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>